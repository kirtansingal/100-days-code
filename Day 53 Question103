#include <stdio.h>

int findPivotIndex(int arr[], int size) {
    int totalSum = 0;
    for (int i = 0; i < size; i++) {
        totalSum += arr[i];
    }
    int leftSum = 0;
    for (int i = 0; i < size; i++) {

        if (leftSum == (totalSum - leftSum - arr[i])) {
            return i;
        }
        leftSum += arr[i];
    }
    return -1;
}

int main() {
    int arr[] = {1, 7, 3, 6, 5, 6};
    int size = sizeof(arr) / sizeof(arr[0]);

    int pivot = findPivotIndex(arr, size);
    printf("%d\n", pivot);

    return 0;
}
