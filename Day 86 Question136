#include <stdio.h>

enum Operation {ADD = 1, SUBTRACT, MULTIPLY};

int main() {
    int choice;
    double num1, num2, result;

    printf("Choose operation:\n1. ADD\n2. SUBTRACT\n3. MULTIPLY\n");
    printf("Enter choice (1-3): ");
    scanf("%d", &choice);

    if (choice < ADD || choice > MULTIPLY) {
        printf("Invalid choice.\n");
        return 1;
    }

    printf("Enter two numbers: ");
    scanf("%lf %lf", &num1, &num2);

    enum Operation op = choice;

    switch (op) {
        case ADD:
            result = num1 + num2;
            printf("Result: %.2lf\n", result);
            break;
        case SUBTRACT:
            result = num1 - num2;
            printf("Result: %.2lf\n", result);
            break;
        case MULTIPLY:
            result = num1 * num2;
            printf("Result: %.2lf\n", result);
            break;
        default:
            printf("Unknown operation.\n");
    }

    return 0;
}
