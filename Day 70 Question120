#include <stdio.h>
#include <ctype.h>
#include <string.h>

void toSentenceCase(char str[]) {
    int len = strlen(str);

    if (len == 0) return;

  
    for (int i = 0; i < len; i++) {
        str[i] = tolower(str[i]);
    }

   
    for (int i = 0; i < len; i++) {
        if (isalpha(str[i])) {
            str[i] = toupper(str[i]);
            break;
        }
    }
}

int main() {
    char str[1000];

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);

   
    size_t len = strlen(str);
    if (len > 0 && str[len-1] == '\n') {
        str[len-1] = '\0';
    }

    toSentenceCase(str);
    printf("%s\n", str);

    return 0;
}
