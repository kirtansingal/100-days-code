#include <stdio.h>

enum Gender {MALE, FEMALE, OTHER};

typedef struct {
    char name[50];
    enum Gender gender;
} Person;

int main() {
    Person p;

    
    printf("Enter name: ");
    scanf("%s", p.name);

    int genderChoice;
    printf("Enter gender (0=MALE, 1=FEMALE, 2=OTHER): ");
    scanf("%d", &genderChoice);

    if (genderChoice < 0 || genderChoice > 2) {
        printf("Invalid gender choice.\n");
        return 1;
    }

    p.gender = (enum Gender)genderChoice;

    printf("Name: %s\n", p.name);
    printf("Gender: ");
    switch (p.gender) {
        case MALE:
            printf("Male\n");
            break;
        case FEMALE:
            printf("Female\n");
            break;
        case OTHER:
            printf("Other\n");
            break;
    }

    return 0;
}
